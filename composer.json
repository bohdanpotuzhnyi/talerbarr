{
  "name": "talerbarr/module",
  "type": "project",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13.4",
    "phpdocumentor/phpdocumentor": "^v3.8.1"
  },
  "scripts": {
    "lint": "pre-commit run --all-files",
    "fix": "vendor/bin/phpcbf --standard=devtools/phpcs/ruleset.xml",
    "docs": "vendor/bin/phpdoc --config=devtools/phpdoc/phpdoc.xml --no-interaction",
    "docs:clean": "rm -rf build/docs build/cache/phpdoc || true",
    "docs:rebuild": [
      "@docs:clean",
      "@docs"
    ]
  }
}
